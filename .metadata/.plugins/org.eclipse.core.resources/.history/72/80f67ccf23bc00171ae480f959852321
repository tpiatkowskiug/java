			strumienie = new RandomAccessFile("dane.txt" ,"rw");
		} catch(FileNotFoundExceptnion e){
			System.out.println("Błąd otwierania strumienia");
		}
		try{
			strumienie.writeUTF("Może w końcu coś wyjdzddd;
			strumienie.writeINT(20);
			
		      strumień = new RandomAccessFile("daneBinarne.txt", "rw");
	            while (strumień.read() != -1)
	                ilośćSczytanychBajtów++;
	        } catch (IOException e) {
	            System.out.println("Błąd wejścia-wyjścia");
	        }
	 
