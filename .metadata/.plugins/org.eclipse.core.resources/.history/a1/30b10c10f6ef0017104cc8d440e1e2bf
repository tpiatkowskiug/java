package repository;

import java.util.List;

import dao.DAOFactory;
import dao.IKlientDAO;
import model.Zamawianie_badan;

public class ZamówieniaRepo implements IZamówieniaRepo{

	DAOFactory sqliteFactory = DAOFactory.getDAOFactory(DAOFactory.SQLITE);
    IKlientDAO klientDAO = sqliteFactory.getKlientDAO();

//	@Override
	public List<Zamawianie_badan> getZamówienie() {
       return klientDAO.readAll();
	}
	
//	@Override
	public void insertZamówienie(Zamawianie_badan zamówienie) {
        klientDAO.create(zamówienie);
	}

//	@Override
	public void createTableZamówienie() {
		klientDAO.createTable();
	}
	
	
	public void updateZamówienie(Zamawianie_badan zamówienie) {
		klientDAO.update(zamówienie);	
	}
	
	public void deleteZamówienie(Integer zamówienieId) {
		klientDAO.delete(zamówienieId);
	}
